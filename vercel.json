{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    { "src": "frontend/api/**/*.ts", "use": "@vercel/node" }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_DEMO_MODE": "false"
  },
  "regions": ["icn1"]
}
