{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_DEMO_MODE": "false",
    "REACT_APP_API_URL": "https://ecotouch-927n3pzab-ryan-jm-parks-projects.vercel.app"
  },
  "regions": ["icn1"]
}
