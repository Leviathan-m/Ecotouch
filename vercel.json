{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_DEMO_MODE": "false",
    "REACT_APP_API_URL": "https://ecotouch-l189mxg5j-ryan-jm-parks-projects.vercel.app"
  },
  "regions": ["icn1"]
}
