{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    { "src": "frontend/api/**/*.ts", "use": "@vercel/node" },
    { "src": "api/**/*.ts", "use": "@vercel/node", "config": { "includeFiles": [] } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_DEMO_MODE": "false"
  },
  "regions": ["icn1"]
}
